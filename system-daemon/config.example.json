{
  "checkIntervalMs": 300000,
  "mode": "auto-install",

  "updateApi": "https://api.github.com/repos/leoaigner7/customer-dashboard-v2/releases/latest",

  "offlineZip": "C:\\CustomerDashboard\\updates\\customer-dashboard.zip",
  "offlineHash": "C:\\CustomerDashboard\\updates\\customer-dashboard.zip.sha256",

  "installRoot": "C:\\CustomerDashboard",

  "target": {
    "envFile": "C:\\CustomerDashboard\\deploy\\.env",
    "composeFile": "C:\\CustomerDashboard\\deploy\\docker-compose.yml",
    "versionKey": "APP_VERSION",
    "serviceName": "dashboard",
    "healthUrl": "http://localhost:8080/"
  },

  "artifacts": {
    "imageTemplate": "ghcr.io/leoaigner7/customer-dashboard-v2:{version}"
  },

  "notification": {
    "logFile": "..\\logs\\daemon.log"
  },

  "backup": {
    "enabled": true,
    "dir": "C:\\CustomerDashboard\\backups",
    "keep": 3
  },

  "logging": {
    "maxSize": 1048576,
    "maxFiles": 5
  }
}
