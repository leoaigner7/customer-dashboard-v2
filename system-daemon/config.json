{
  "mode": "auto-install",
  "checkIntervalMs": 300000,

  "paths": {
    "installRoot": "__INSTALL_ROOT__",
    "stagingDir": "__INSTALL_ROOT__/staging",
    "backupDir": "__INSTALL_ROOT__/backup",
    "statusFile": "__INSTALL_ROOT__/logs/update-status.json"
  },

  "logging": {
    "logFile": "__INSTALL_ROOT__/logs/daemon.log",
    "level": "info"
  },

  "backup": {
    "enabled": true,
    "keep": 5
  },

  "target": {
    "type": "docker-dashboard",
    "envFile": "__INSTALL_ROOT__/deploy/.env",
    "versionKey": "APP_VERSION",
    "composeFile": "__INSTALL_ROOT__/deploy/docker-compose.yml",
    "serviceName": "dashboard",
    "healthUrl": "http://localhost:8080/api/health"
  },

  "sources": {
    "github": {
      "enabled": true,
      "apiUrl": "https://api.github.com/repos/leoaigner7/customer-dashboard-v2/releases/latest",
      "imageTemplate": "ghcr.io/leoaigner7/customer-dashboard-v2:{version}"
    },
    "offlineZip": {
      "enabled": true,
      "zipPath": "__INSTALL_ROOT__/offline/customer-dashboard-v2-latest.zip",
      "hashFile": "__INSTALL_ROOT__/offline/customer-dashboard-v2-latest.zip.sha256",
      "signatureFile": "__INSTALL_ROOT__/offline/customer-dashboard-v2-latest.zip.sig",
      "version": null
    },
    "networkShare": {
      "enabled": false,
      "root": "__NETWORK_ROOT__",
      "latestFile": "latest.txt"
    }
  },

  "security": {
    "requireHash": true,
    "requireSignature": true,
    "publicKeyFile": "__INSTALL_ROOT__/system-daemon/trust/updater-public.pem"
  },

  "selfUpdate": {
    "enabled": false
  },

  "policy": {
    "pinnedVersion": null,
    "allowDowngrade": false
  }
}
