{
  "mode": "auto-install",
  "checkIntervalMs": 300000,

  "paths": {
  "installRoot": "",
  "stagingDir": "staging",
  "backupDir": "backup",
  "statusFile": "logs/update-status.json"
},


 "logging": {
  "logFile": "logs/daemon.log",
  "level": "info"
},

  "backup": {
    "enabled": true,
    "keep": 5
  },

  "target": {
    "type": "docker-dashboard",
    "envFile": "deploy/.env",
    "versionKey": "APP_VERSION",
    "composeFile": "deploy/docker-compose.yml",
    "serviceName": "dashboard",
    "healthUrl": "http://localhost:8080/"
  },

  "sources": {
    "github": {
      "enabled": true,
      "apiUrl": "https://api.github.com/repos/leoaigner7/customer-dashboard-v2/releases/latest",
      "imageTemplate": "ghcr.io/leoaigner7/customer-dashboard-v2:{version}",
      "assetPrefix": "customer-dashboard-v2-",
      "assetExt": ".zip",
      "hashExt": ".sha256",
      "sigExt": ".sig"    
    },
    "offlineZip": {
      "enabled": true,
       "zipPath": "offline/customer-dashboard-v2-latest.zip",
       "hashFile": "offline/customer-dashboard-v2-latest.zip.sha256",
       "signatureFile": "offline/customer-dashboard-v2-latest.zip.sig",
       "version": null
    }
  },

  "security": {
    "requireHash": true,
    "requireSignature": false,
    "publicKeyFile": "keys/public.pem"
  },

  "selfUpdate": {
    
    "enabled": false,
    "zipUrl": "",
    "hashUrl": "",
    "signatureUrl": "",
    "localZipPath": "system-daemon/daemon-update.zip"
  },

  "policy": {
    "pinnedVersion": null,
    "allowDowngrade": false
  }
}
